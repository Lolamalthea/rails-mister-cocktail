<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Mister Cocktails</h1>
      <%= link_to "Add a new Cocktail", new_cocktail_path %>
    </div>
  </div>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <h3>
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </h3>
      </div>
    <% end %>
  </div>
</div>
